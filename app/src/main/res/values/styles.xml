<resources>

    <!-- Color Theme: https://material.io/develop/android/theming/color/ -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.TransparentStatus" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="SplashActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/cover_launcher</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DialogFullscreen" parent="Theme.MaterialComponents.Light.DialogWhenLarge">
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="DialogFullscreenWithTitle" parent="Theme.MaterialComponents.Light.DialogWhenLarge">
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>
